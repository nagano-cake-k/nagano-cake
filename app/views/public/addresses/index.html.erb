<h4>配送先登録/一覧</h4>

<%= render 'error', address: @address %>

<%= render 'form', address: @address %>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">郵便番号</th><th scope="col">住所</th><th scope="col">宛名</th>
    </tr>
  </thead>
  <tbody>
     <% @addresses.each do |address| %>
    <tr>
      <td><%= address.post_code %></td><td><%= address.address %></td><td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) ,class: "btn btn-success" %>
      <%= link_to "削除する", address_path(address.id), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger"%></td>
    </tr>
    <% end %>
  </tbody>
</table>