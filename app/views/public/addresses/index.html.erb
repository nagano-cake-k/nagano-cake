<h4>配送先登録/一覧</h4>

<%= render 'error', address: @address %>

<%= render 'form', address: @address %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th><th>住所</th><th>宛名</th><th><br /></th><th><br /></th>
    </tr>
  </thead>
  <tbody>
     <% @addresses.each do |address| %>
       <% if current_customer.id == @customer %>
    <tr>
      <td><%= address.post_code %></td><td><%= address.address %></td><td><%= address.name %></td>
      <td><%= link_to "編集する", edit_public_address_path(address.id) %></td>
      <td><%= link_to "削除する", public_address_path(address.id), method: :delete, data: {confirm: "削除しますか？"} %></td>
    </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
