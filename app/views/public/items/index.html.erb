<div class="container">

  <div class="row mb-4">
    <h1 class="mr-2">商品一覧</h1>
    <p class="d-flex align-items-center mb-0">(全<%= @items.count %>件)</p>
  </div>

  <div class="row">
    <div class="d-flex flex-wrap">
      <% @items.each do |item| %>
      <div class="col-3">
         <p class="mb-0"><%= image_tag item.image, size: "200x150" %></p>
         <p class="mb-0 font-weight-bold"><%= item.name %></p>
         <P class="font-weight-bold">￥<%= item.cost.to_s(:dalimited) %></P>
      </div>
      <% end %>
    </div>
  </div>

</div>

