<div class="container">

  <div class="row mb-4">
    <h1 class="mr-2">商品一覧</h1>
    <p class="d-flex align-items-center mb-0">(全<%= @items.count %>件)</p>
  </div>

  <div class="row">
    <div class="d-flex flex-wrap">
      <% @items.each do |item| %>
      <div class="col-3">
         <div class="mb-0">
          <%= image_tag item.image, size: "200x150" %>
          <%=link_to public_item_path(item.id) do %>
            <p class="mb-0 font-weight-bold"><%= item.name %></p>  
          <% end %>
         </div>
         <P class="font-weight-bold">￥<%= item.add_tax_cost %></P>
      </div>
      <% end %>
    </div>
  </div>

</div>

