<div class="container">

  <div class="row">
    <h1 class="mr-2 mb-0">商品一覧</h1>
    <p class="d-flex align-items-center mb-0">(全<%= @items.count %>件)</p>
  </div>

  <div class="row">
    <div class="d-flex flex-wrap">
      <%= @items.each do |item| %>
      <div class="col-3">
         <%= image_tag item.image, size: "150x150" %>
         <%= item.name %>
         <%= item.cost %>
      </div>
      <% end %>
    </div>
  </div>

</div>

