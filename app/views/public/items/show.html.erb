<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-4 mr-3">
      <!--<h3>商品説明</h3>-->
    </div>
    <div class="col-3">
      <%= image_tag @item.image, size: "250x200" %>
    </div>
    <div class="col-4">
      <div class="container">
        <div></div>
        <h4><strong><%= @item.name %></strong></h4>
        <h5><%= @item.explanation %></h5>

        <div class="row mt-5">
          <h4>￥<%= @item.add_tax_cost.to_s(:delimited) %></h4>
          <div class="mr-auto align-self-center">　 (税込)</div>
        </div>
      </div>
    </div>

  </div>

  <div class="row justify-content-center my-3">
    <div class="col-5"></div>
      <div class="col-4">
      <% if @item.is_sales == true %>
        <%= form_with model: @cart_item, url: public_cart_items_path, method: :post, local: true do |f| %>
  
          <%= f.select :amount, [1,2,3,4,5,6,7,8,9], include_blank: "個数選択" %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          　　<%= f.submit "カートに入れる", class: "btn btn-success"%>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>