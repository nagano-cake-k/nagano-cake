<div class="container">
  <div class="row">

    <div class="col-5">
      <%= image_tag @item.image, size: "400x300" %>
    </div>

    <div class="col-6">
      <h2 class="mb-2"><%= @item.name %></h2>
      <p class="mb-5"><%= @item.explanation %></p>
      <div class="d-flex">
        <h3 class="mr-1">￥<%= @item.cost %></h3>
        <p class="d-flex align-items-center mb-0">(税込)</p>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-5"></div>
        <div class="col-md-7 d-flex justify-content-end">
            <div class="form-group pr-5">
                <%= form_with model: @cart_item, method: :post do |f| %>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.select :amount, [["1個", "1"], ["2個", "2"], ["3個", "3"], ["4個", "4"], ["5個", "5"],["6個", "6"],["7個", "7"],["8個", "8"],["9個","9"]], include_blank: "個数選択" %>
                <%= f.submit 'カートに入れる', class:"btn btn-success btn-sm"%>
                <% end %>
            </div>
        </div>
    </div>
</div>