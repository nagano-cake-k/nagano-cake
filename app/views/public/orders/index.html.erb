<div class="cotainer">

  <div class="row">
    <div class="col-10">
      <h2>注文履歴一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
           <% @orders.each do |order| %>
          <tr>
            <td><%= order.created.at.strftime('%Y/ %m/ %d') %></td>
            <td><%= "〒#{order.post_code}" + " " + "#{order.address}" + " " + "#{order.name}" %></td>
            <td>

            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>

</div>
