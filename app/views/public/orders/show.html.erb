<div class="container">

  <h2 class="my-4">注文確認画面</h2>

  <div class="row">
    <div class="col-7">
      <label class="font-weight-bold mb-2 ml-2" style="background-color:#DDDDDD;">
        注文情報
      </label>
      <table class="table">
        <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr><th>配送先</th><td><%= "〒" + @order.post_code + "  " + @order.address + "  " + @order.name %></td></tr>
        <tr><th>支払方法</th><td><%= @order.payment_method %></td></tr>
        <tr><th>ステータス</th><td><%= @order.status_i18n %></td></tr>
      </table>
    </div>
    <div class="col-3">
       <label class="font-weight-bold mb-2 ml-2" style="background-color:#DDDDDD;">
        請求情報
      </label>
      <table class="table">
        <tr><th>商品合計</th><td><%= @order.total_payment - @postage %></td></tr>
        <tr><th>配送先</th><td><%= @postage %></td></tr>
        <tr><th>ご請求額</th><td><%= @order.total_payment %></td></tr>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-8">
      <label class="font-weight-bold mb-2 ml-2" style="background-color:#DDDDDD;">
        注文内容
      </label>
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.add_tax_cost %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.tax_price %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>


</div>
