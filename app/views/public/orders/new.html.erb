
<div class="order_input">

  <h3 class="title">注文情報入力</h2>

  <%= form_with model: @order, url:orders_confirm_path, method: :post do |f| %>

  <div class="payment_select">
    <h4>支払い方法</h4>
    <p class="radio_bottun mb-0">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
      <%= f.label :payment_method, "クレジットカード" %>
    </p>
    <p class="radio_bottun mb-0">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, "銀行振込" %>
    </p>
  </div>

  <div class="address_select">
    <h4>お届け先</h4>
    <div class="self_address">
      <p class="radio_bottun mb-0">
        <%= f.radio_button :address_type, 0 %>
        <%= f.label :address_type, "ご自身の住所" %>
      </p>
      <p class="address_text mb-0">
        〒<%= current_customer.post_code + "　" + current_customer.address  %>
      </p>
      <P class="name_text">
        <%= current_customer.last_name + "　" + current_customer.first_name %>
      </P>
    </div>

    <div class="registered_address">
      <%= f.radio_button :address_type, 1 %>
      <%= f.label :address_type, "登録済み住所から選択" %>
      <p><%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address) %></p>
    </div>

    <div class="new_address">
      <table>
      <tr>
        <%= f.radio_button :address_type, 2 %>
        <%= f.label :address_type, "新しいお届け先" %></td>
      </tr>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :post_code, placeholder: "0000000" %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
      </tr>
       <tr>
        <th>宛名</th>
        <td><%= f.text_field :name, placeholder: "令和道子" %></td>
      </tr>
      </table>
    </div>

    <div class="submit">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>

  </div>
  <% end %>


</div>



