<div class="container ">
  <div class="row mb-3">
    <h3>会員一覧</h3>  
  </div>

  <table class="table  table-hover">
      <thead>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tead>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>  
          <td>
            <%=link_to admin_item_path(item.id) do %>
              <%= image_tag item.image, size: "100x100" %>
              <%= item.name %>
            <% end %>
          </td>
          <td>¥<%= item.add_tax_cost %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_sales == true %>
              <div>販売中</div>
            <% else %>
              <div>販売停止中</div>
            <% end %>
          </td>
        </tr>
        <% end %>
  </table>
</div>