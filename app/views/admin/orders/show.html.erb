<div class="container">
  <div class="row">
    <div class="col-5">
      <h4>注文履歴</h4>
      <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
      <table class="table">
        <tr><th>購入者</th><td><%= @order.name %></td></tr>
        <tr><th>注文日</th><td><%= @order.created_at.strftime("%Y/%m/%d") %></td></tr>
        <tr><th>配送先</th><td><%= "〒"+  @order.post_code + "  " + @order.address %><br><%= @order.name %></td></tr>
        <tr><th>支払方法</th><td><%= @order.payment_method %></td></tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
            <%= f.submit "更新" , class:"btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-7">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
           <% @order_details.each do |order_detail| %>
             <tr>
               <td><%= order_detail.item.name %></td>
               <td><%= order_detail.item.add_tax_cost %></td>
               <td><%= order_detail.quantity %></td>
               <td><%= order_detail.item.add_tax_cost * order_detail.quantity %></td>
               <td>
                 <%= form_with model: [@order,order_detail], url: admin_order_order_detail_path(@order,order_detail), method: :patch, local: true do |f| %>
                   <%= f.select :production_status, OrderDetail.production_statuses.keys.map {|k| [I18n.t("enums.order_detail.production_status.#{k}"), k]} %>
                   <%= f.submit "更新" , class:"btn btn-success" %>
                 <% end %>
               </td>
             </tr>
           <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table>
        <tr><th>商品合計</th><td><%= @order.total_payment - @postage %></td></tr>
        <tr><th>送料</th><td><%= @postage %></td></tr>
        <tr><th>請求金額合計</th><td><%= @order.total_payment %></td></tr>
      </table>
    </div>
  </div>

</div>