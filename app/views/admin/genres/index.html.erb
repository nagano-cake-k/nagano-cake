<h4>ジャンル追加/一覧</h4>

<%= render 'form', genre: @genre %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th><ht><br /></ht>
    </tr>
  </thead>
  <tbody>
     <% @genres.each do |genres| %>
    <tr>
      <td><%= genres.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genres.id) %></td>
      <td><%= link_to "削除する", admin_genre_path(genres.id), method: :delete, data: {confirm: "削除しますか？"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>