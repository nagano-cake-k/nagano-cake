<h4>ジャンル追加/一覧</h4>

<%= render 'form', genre: @genre %>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ジャンル</th>
    </tr>
  </thead>
  <tbody>
     <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success"  %>
      <%= link_to "削除する", admin_genre_path(genre.id), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger"%></td>
    </tr>
    <% end %>
  </tbody>
</table>