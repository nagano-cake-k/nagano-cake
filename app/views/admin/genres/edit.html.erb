<h4>ジャンル編集</h4>

<%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>

<table>
    <tr>
        <td><%= f.label :name, "ジャンル名" %></td><td><%= f.text_field :name %></td>
        <td><%= f.submit '変更内容を保存する', class: "btn btn-success" %></td>
    </tr>
</table>
<% end %>

<%= link_to "戻る", admin_genres_path, class: "btn btn-primary" %>